@model SwiftSeat.Models.Shows

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-6 fw-bold text-primary mb-4 text-uppercase">Show Details</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row mb-4">
            <dt class="col-sm-4 fw-semibold">Title</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-4 fw-semibold">Description</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-4 fw-semibold">Event Date</dt>
            <dd class="col-sm-8">@Model.EventDate.ToString("MM/dd/yyyy h:mm tt")</dd>

            <dt class="col-sm-4 fw-semibold">Venue</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Venue)</dd>

            <dt class="col-sm-4 fw-semibold">Photo</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.PhotoFileName))
                {
                    <img src="@(Model.PhotoFileName.StartsWith("http", StringComparison.OrdinalIgnoreCase) ? Model.PhotoFileName : Url.Content("~/photos/" + Model.PhotoFileName))"
                         alt="@Model.Title"
                         class="img-thumbnail shadow-sm"
                         style="width:180px; height:130px; object-fit:contain;" />
                }
                else
                {
                    <img src="~/images/placeholder.png" alt="No Image" class="img-thumbnail shadow-sm" style="width:180px; height:130px; object-fit:contain;" />
                }
            </dd>

            <dt class="col-sm-4 fw-semibold">Photo File Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhotoFileName)</dd>

            <dt class="col-sm-4 fw-semibold">Owner</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Owner)</dd>

            <dt class="col-sm-4 fw-semibold">Created</dt>
            <dd class="col-sm-8">@Model.Created.ToString("MM/dd/yyyy h:mm tt")</dd>

            <dt class="col-sm-4 fw-semibold">Category</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>
        </dl>

        <a asp-controller="Shows" asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-primary fw-bold px-4 py-2 me-2">Edit</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to Home</a>
    </div>
</div>
