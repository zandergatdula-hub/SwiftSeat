@{
    ViewData["Title"] = "Logout";
}

<div class="container d-flex align-items-md-center justify-content-center mt-md-5">
    <div class="w-100" style="max-width: 400px;">
        <div class="card shadow border-0">
            <div class="card-body p-5">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <img src="~/Logo/SwiftSeat Logo.jpg" alt="SwiftSeat Logo" style="height:40px;" class="me-2" />
                    <span class="fw-bold fs-1 text-center">LOGOUT</span>
                </div>
                <p class="text-center text-secondary mb-4">You have been successfully logged out.</p>
                <div class="d-grid">
                    <a href="~/Account/Login" class="btn btn-primary btn-lg fw-bold">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>